<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/app_bg"
    android:orientation="vertical"
    android:padding="@dimen/paddingMediumExtraPlusPlus" >
    
     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/invalid_age_dialog_title"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeExtrsLargePlusPlus"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/trial_popup_trial_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginLarge"
        android:text="@string/free_trail_msg"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeExtrsLargePlus" />

    <Button
         android:layout_width="@dimen/sizeOfEighty"
        android:layout_height="@dimen/sizeOfEighty"
        android:id="@+id/trial_popup_ok_btn"
        android:layout_marginTop="@dimen/marginLarge"
        android:background="@drawable/icon_outline_color_selected"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="OK"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeLarge" />

</LinearLayout>
