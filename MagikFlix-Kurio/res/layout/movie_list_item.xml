<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.magikflix.kurio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9" >

            <ImageView
                android:id="@+id/movie_list_thumbnail_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <com.magikflix.kurio.app.views.MagicflixTextView
                android:id="@+id/movie_list_duration_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@color/transparent_black"
                android:padding="@dimen/paddingSmall"
                android:textColor="@color/white"
                app:fontName="avenirnext_medium_lt.otf" />
        </RelativeLayout>

        <com.magikflix.kurio.app.views.MagicflixTextView
            android:id="@+id/movie_list_item_title_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.1"
            android:background="@color/transparent"
            android:singleLine="true"
            android:textColor="@color/white"
            android:visibility="gone"
            app:fontName="avenirnext_medium_lt.otf" />
    </LinearLayout>

</LinearLayout>